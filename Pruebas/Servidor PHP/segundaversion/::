var dataArray = [];   
cambiarmes();

var d = new Date();
var strDate = d.getFullYear() + "/" + (d.getMonth()+1) + "/" + d.getDate();
var fecha ={
	fecha:strDate,
	dia: d.getDate(),
	diasemananumero: d.getDay(),
	diasemana: diasemana(d.getDay()),
	mes: mesfecha(d.getMonth()),
	mesnumero: d.getMonth(),
	anio: d.getFullYear(),
	hora:d.getHours()+":"+d.getMinutes() 
};
